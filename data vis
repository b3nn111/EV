    </div>


    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
            var visualizations = document.querySelectorAll('.tableauViz');
            var vizURLs = [
                'https://public.tableau.com/views/DashboardEVadoption/Dashboard1?:language=en-GB&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 1
                'https://public.tableau.com/views/6_06/Dashboard2?:language=zh-CN&publish=yes&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 2
                'https://public.tableau.com/views/ElectriccarspendingworldwideandaveragespendingperEV/Dashboard3?:language=zh-CN&publish=yes&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 3
                'https://public.tableau.com/views/5_24_17165571330570/Dashboard1?:language=zh-CN&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 4
                'https://public.tableau.com/views/AverageEVfinancialpurchaseinselectedcountries_17181143928320/Dashboard4?:language=en-GB&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 5
                'https://public.tableau.com/views/totalchargingpoint/1?:language=en-GB&:sid=&:display_count=n&:origin=viz_share_link', // URL for Visualization 6
                'https://public.tableau.com/views/EVs_17178365534900/Dashboard1?:language=en-GB&publish=yes&:sid=&:display_count=n&:origin=viz_share_link'  // URL for Visualization 9
            ];
            var options = {
                width: '100%',
                height: '800px',
                hideTabs: true,
                hideToolbar: true
            };
            visualizations.forEach(function(vizDiv, index) {
                if (vizURLs[index] !== '') {
                    var viz = new tableau.Viz(vizDiv, vizURLs[index], options);
                }
            });

            var coll = document.getElementsByClassName("collapsible");
            for (let i = 0; i < coll.length; i++) {
                coll[i].addEventListener("click", function() {
                    this.classList.toggle("active");
                    var contentCollapsible = this.nextElementSibling;
                    if (contentCollapsible.style.height) {
                       contentCollapsible.style.height = null;
                    } else {
                       contentCollapsible.style.height = contentCollapsible.scrollHeight + "px";
                    }
                });
            }
        });
    </script>
